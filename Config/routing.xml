<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.translation.menu" path="/admin/module/translation">
        <default key="_controller">Translation\Controller\AdminController::showPage</default>
    </route>

    <route id="translation.export" path="/admin/module/translation/export">
        <default key="_controller">Translation\Controller\ExportController::exportAction</default>
    </route>

    <route id="translation.import" path="/admin/module/translation/import">
        <default key="_controller">Translation\Controller\ImportController::importAction</default>
    </route>

    <route id="translation.revert" path="/admin/module/translation/revert">
        <default key="_controller">Translation\Controller\AdminController::revertAction</default>
    </route>

    <route id="translation.extension" path="/admin/module/translation/extension">
        <default key="_controller">Translation\Controller\AdminController::setExtensionAction</default>
    </route>
</routes>
